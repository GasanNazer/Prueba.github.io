CREATE TABLE EMPLOYEE (EID INTEGER NOT NULL, DEG VARCHAR(255), ENAME VARCHAR(255), SALARY DOUBLE, PRIMARY KEY (EID))
CREATE TABLE PERSON (ID BIGINT NOT NULL, CITY VARCHAR(255), FIRSTNAME VARCHAR(255), LASTNAME VARCHAR(255), PHONENUMBER VARCHAR(255), STREET VARCHAR(255), ZIPCODE VARCHAR(255), DEPARTMENT_ID BIGINT, PRIMARY KEY (ID))
CREATE TABLE DEPARTMENT (ID BIGINT NOT NULL, NAME VARCHAR(255), PARENT_ID BIGINT, PRIMARY KEY (ID))
ALTER TABLE PERSON ADD CONSTRAINT FK_PERSON_DEPARTMENT_ID FOREIGN KEY (DEPARTMENT_ID) REFERENCES DEPARTMENT (ID)
ALTER TABLE DEPARTMENT ADD CONSTRAINT FK_DEPARTMENT_PARENT_ID FOREIGN KEY (PARENT_ID) REFERENCES DEPARTMENT (ID)
CREATE TABLE SEQUENCE (SEQ_NAME VARCHAR(50) NOT NULL, SEQ_COUNT DECIMAL(38), PRIMARY KEY (SEQ_NAME))
